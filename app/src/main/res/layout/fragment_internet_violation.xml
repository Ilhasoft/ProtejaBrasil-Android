<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="violation"
            type="br.com.ilhasoft.protejaBrasil.model.Violation" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_safernet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:textSize="18sp"
                android:text="@string/text_about_safernet" />

            <Button
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shape_blue_round_button"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:text="@string/label_internet_help"/>

            <Button
                android:id="@+id/report"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shape_red_round_button"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:text="@string/label_report_using_app"/>

        </LinearLayout>

    </ScrollView>
</layout>